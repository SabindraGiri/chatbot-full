const express = require('express');
const cors = require('cors');
const { PythonShell } = require('python-shell');

const app = express();
app.use(cors());
app.use(express.json());

app.post('/chat', (req, res) => {
  const userMessage = req.body.message;
  console.log("ðŸ“¨ Received:", userMessage);

  const options = {
    mode: 'text',
    pythonOptions: ['-u'],
    scriptPath: './',
    args: [userMessage],
  };

  PythonShell.run('chatbot.py', options, (err, results) => {
    if (err) {
      console.error("âŒ Python error:", err);
      return res.status(500).send({ reply: "Python script error." });
    }

    console.log("ðŸ§  Python result:", results);
    res.send({ reply: results?.slice(-1)[0] || "No response from chatbot." });
  });
});


app.listen(5000, () => {
  console.log('Backend running on http://localhost:5000');
});
